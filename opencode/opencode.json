{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "ast-grep": {
      "type": "local",
      "command": ["uvx", "--from", "git+https://github.com/ast-grep/ast-grep-mcp", "ast-grep-server"],
      "enabled": true
    }
  },
  "permission": {
    "bash": {
      "*": "allow",
      "cargo *": "allow",
      "cargo install *": "ask",
      "jj *": "allow",
      "jj rebase *": "ask",
      "jj squash *": "ask",
      "jj git *": "ask",
      "jj gpc *": "ask"
    }
  }
}
